{
    "projects.configPath": "~/.vscode_projects.json",
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/.git/**": true,
        "**/node_modules/**": true
    },
    "workbench.startupEditor": "newUntitledFile",
    "vsicons.dontShowNewVersionMessage": true,
    "telemetry.telemetryLevel": "off",
    "extensions.ignoreRecommendations": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [120],
    "editor.tabCompletion": "on",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#464451"
    },
    "editor.fontFamily": "MesloLGL Nerd Font",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "Fira Code",
    "debug.showInStatusBar": "never",
    "debug.toolBarLocation": "hidden",
    "projects.statusbarEnabled": false,
    "debug.openExplorerOnEnd": true,
    "workbench.colorTheme": "SynthWave '84",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "synthwave84.brightness": 0.75,
    "remote.SSH.defaultExtensions": [
        "eamodio.gitlens",
        "mrmlnc.vscode-duplicate",
        "oderwat.indent-rainbow",
        "ryu1kn.partial-diff",
        "2gua.rainbow-brackets",
        "fabiospampinato.vscode-statusbar-debugger",
        "robbowen.synthwave-vscode"
    ],
    "explorer.confirmDragAndDrop": false,
    "workbench.iconTheme": "vscode-icons",
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/.direnv*": true

    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "[python]": {
        "editor.formatOnSave": true
    },
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "jupyter.askForKernelRestart": false,
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "debug.allowBreakpointsEverywhere": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.advanced.messages": {
        "suppressGitMissingWarning": true
    },
    "workbench.editor.untitled.hint": "hidden",
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "auto-build.defaultEnv.name": "sanguino1284p",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "partialDiff.enableTelemetry": false
}
